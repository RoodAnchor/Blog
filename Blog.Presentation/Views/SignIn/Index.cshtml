@model SignInViewModel

@{
    ViewData["Title"] = "Вход в приложение";
}

<h1>@ViewData["Title"]</h1>

<form method="post" asp-controller="SignIn" asp-action="Index">
    <div class="mb-3">
        <label for="email">Email</label>
        <input asp-for="Email" type="email" id="email" class="form-control" required placeholder="Введите ваш Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="mb-3">
        <label for="password">Пароль</label>
        <input asp-for="Password" type="password" id="password" class="form-control" placeholder="Введите ваш пароль" required />
        <span asp-validation-for="Password"></span>
    </div>

    <button class="btn btn-primary" type="submit">Вход</button>
</form>

<div>
    Нет аккаунта? <a asp-area="" class="link-primary" asp-controller="SignUp" asp-action="Index">Зарегестрируйтесь</a>
</div>