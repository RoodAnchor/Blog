@model TagModel

@{
    ViewData["Title"] = "Редактирование тэга";
}

<h1>@ViewData["Title"]</h1>

<form method="post" asp-action="Edit" asp-controller="Tags" asp-route-id="@null">
    <div class="mb-3">
        <label for="name">Название</label>
        <input asp-for="Name" type="text" id="name" class="form-control" required minlength="2" />
        <span asp-validation-for="Name"></span>
    </div>
    <button class="btn btn-primary" type="submit">Сохранить</button>
    <input asp-for="Id" type="hidden" />
</form>
<div>
    <a asp-area="" class="link-primary" asp-controller="Tags" asp-action="All">Список всех тэгов</a>
</div>