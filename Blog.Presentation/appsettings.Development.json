{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "NLog": {
    "autoReload": true,
    "throwConfigExceptions": true,
    "extensions": [
      { "assembly": "NLog.Extensions.Logging" },
      { "assembly": "NLog.Web.AspNetCore" },
      { "assembly": "NLog.Database" }
    ],
    "targets": {
      "async": true,
      "database": {
        "type": "Database",
        "dbProvider": "System.Data.SQLite.SQLiteConnection, System.Data.SQLite",
        "connectionString": "Data Source=C:/Repos/Skillfactory/Blog/Blog.Presentation/bin/Debug/net8.0/DB/blog.db;",
        "keepConnection": "true",
        "commandText": "insert into Logs (Level, Date, UserEmail, ClientIP, Message) values (@Level, @Date, @UserEmail, @ClientIP, @Message)",
        "parameters": [
          {
            "name": "@Level",
            "layout": "${level}"
          },
          {
            "name": "@Date",
            "layout": "${longdate}"
          },
          {
            "name": "@UserEmail",
            "layout": "${aspnet-user-identity}"
          },
          {
            "name": "@ClientIP",
            "layout": "${aspnet-request-ip}"
          },
          {
            "name": "@Message",
            "layout": "${message}"
          }
        ]
      }
    },
    "rules": [
      {
        "logger": "*",
        "level": "Info",
        "writeTo": "database",
        "filterDefaultAction": "Ignore",
        "filters": [
          {
            "type": "when",
            "condition": "starts-with(message,'Log Entry: ')",
            "action": "Log"
          }
        ]
      },
      {
        "logger": "*",
        "level": "Error",
        "writeTo": "database"
      },
      {
        "logger": "*",
        "level": "Warn",
        "writeTo": "database"
      }
    ]
  }
}
